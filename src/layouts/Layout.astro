---
import { AstroFont } from 'astro-font';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description: string;
	canonicalLink: string;
	OGTitle?: string;
  OGDesc?: string;
  OGImage?: string;
  OGUrl?: string;
  xImg?: string;
  xtitle?: string;
  xDesc?: string;
}

const { title, description, canonicalLink, OGDesc, OGTitle, OGImage, OGUrl, xtitle, xDesc, xImg } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />

		{/* OG Tags for SM */}
		<meta name='og:title' content={OGTitle} />
		<meta name='og:url' content={OGUrl} />
		<meta name='og:description' content={OGDesc} />
		<meta name='og:type' content='website' />
		<meta name='og:image' content={OGImage} />

		{/* OG Meta Tags for Twitter */}
		<meta name='twitter:card' content='summary_large_image' />
		<meta name='twitter:title' content={xtitle} />
		<meta name='twitter:site' content='astro.blog' />
		<meta name='twitter:description' content={xDesc} />
		<meta name='twitter:image' content={xImg} />

		{/* Canonical link */}
		<link rel='canonical' href={canonicalLink} />

		<!-- Sitemap -->
		<link rel="sitemap" href="" />

		<AstroFont config={[{
			src: [],
			name: "Roboto",
			preload: false,
			display: "swap",
			selector: "body",
			fallback: "sans-serif",
			googleFontsURL: 'https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900',
		}]}
		/>

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- pagefind -->

	</head>
	<body>
		<Header />
		<main style="background-color: var(--light-bg);" class="main-page-content">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	:root {
		--primary-color: #2ecc71;
		--accent-color: #CC2E89;
		--primary-hover: #23bb63;
		--accent-hover: #bc2d80;
		--normal-font: 400;
		--bold-font: 700;
		--bolder-font: 900;
		--bottom-margin: 0.5rem;
		--bottom-margin-2: 1rem;
		--line-height: 1.7rem;
		--transition: 0.3s;
		--paragraph-font: 1.5rem;
		--h1-font: 2.5rem;
		--h2-font: 2rem;
		--border-radius: 4px;

		--bg: #F8F8FF;
		--card-bg: #f1f1f1 ;
		--navbar-and-footer-bg: #f1f1f1;
		--footer-bg: #F2F2F2;
		--text-color: #000;
		--text-color-hover: #0f0f0f;
		--tag-text-color: #FFF;
	}

	[data-theme="light"] {
		--bg: #F8F8FF;
		--ball-bg: #000;
		--label-bg: #FFF;
		--back-bg: #F6F6F6;
		--card-bg: #FFF;
		--navbar-and-footer-bg: #f5f6fa;
		--footer-bg: #F2F2F2;
		--text-color: #000;
		--text-color-hover: #101010;
	}

	[data-theme="dark"] {
		--bg: #111827;
		--ball-bg: #fff;
		--label-bg: #313638;
		--back-bg: #000;
		--card-bg: #141a2a;
		--navbar-and-footer-bg: #101623;
		--footer-bg: #292929;
		--text-color: #fff;
		--text-color-hover: #000;
	}
		 /*White alternatives */
	 /* #F8F8FF
	 		#F5F5F5
			#F1FAFF
			#FBFFF4
	 */

	 /*Black alternatives */
	 /* #313638
	 		#212427
			#130f40
			#222f3e
			#1e272e
	 */

	body {
		background-color: var(--bg);
		color: var(--text-color);
	}

	.main-page-content {
		width: 100%;
		margin-left: auto;
		margin-right: auto;
		max-width: 80rem;
		margin-top: 2.5rem; 
		padding-left: 2rem;
		padding-right: 2rem;
	}

</style>

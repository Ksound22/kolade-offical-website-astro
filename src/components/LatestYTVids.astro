---
import { Image } from "astro:assets";
const res = await fetch(`https://youtube.googleapis.com/youtube/v3/search?part=snippet&channelId=UCwkj9jcrMZCcbcIa6nF5LNQ&maxResults=4&order=date&key=${import.meta.env.GOOGLE_API_KEY}`)

const { items } = await res.json();
---

<div>
  <div class="videos">
    {items?.map((video: any) => (
      <div class="video-item">
        <h3 class="vid-title">{video.snippet.title.substring(0, 33)}...</h3>
        <Image
          src={video.snippet.thumbnails.medium.url}
          width={320}
          height={180}
          alt={video.snippet.title}
        />
        <a 
          href={`https://www.youtube.com/watch?v=${video.id.videoId}`}
          target='_blank'
          rel='noopener noreferrer'
          role='button'
          class="watch-btn"
        >
          Watch
        </a>
      </div>
    ))}
  </div>
  
</div>

<style>
 .videos {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
  }

  .video-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 320px; 
    background-color: var(--card-bg);
    border-radius: 4px;
  }

  .vid-title {
    margin: 10px 0;
  }

  .watch-btn {
    text-align: center;
    width: 90%;
    margin-top: 10px;
    padding: 5px 15px;
    background-color: var(--primary-color);
    color: #262626;
    text-decoration: none;
    border-radius: var(--border-radius);
  }

  @media screen and (max-width: 768px) {
    .videos {
      gap: 0.2rem;
    }

    .video-item {
      padding-top: 1.5rem;
    }
  }
</style>
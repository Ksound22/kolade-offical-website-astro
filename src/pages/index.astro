---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import LatestYTVids from '../components/LatestYTVids.astro';
import LatestArticles from '../components/LatestArticles.astro';
import ReadMoreYTSubBtn from '../components/ReadMoreYTSubBtn.astro';
---

<Layout
	title="Kolade Chris | Software development | Technical Writing | Technical Copywriting"
	description="Insights and tips in software development, technical writing, and technical copywriting to help you excel in the tech world"
	canonicalLink="https://www.koladechris.com/"
	OGTitle='Kolade Chris | Software development | Technical Writing | Technical Copywriting'
>
	<div>
		<Hero />

		<h2>Latest Articles</h2>
		<LatestArticles />

		<ReadMoreYTSubBtn
			href={`/blog`}
			transitionName={`blog-page`}
			>
			Read More Articles
		</ReadMoreYTSubBtn>
	
		<h2>Latest YouTube Videos</h2>
		<LatestYTVids />

		<ReadMoreYTSubBtn
			href={`https://www.youtube.com/channel/UCwkj9jcrMZCcbcIa6nF5LNQ`}
			target={`_blank`}
			>
			Subscribe to my YouTube Channel
		</ReadMoreYTSubBtn>
	</div> 
</Layout>

<style>
	h2 {
		font-size: var(--h2-font);
		margin-top: 2.5rem;
		margin-bottom: .9rem;
	}

	@media screen and (max-width: 820px) {
		h2 {
			text-align: center;
		}
	}
</style>
---
import { Image } from "astro:assets"
import Layout from "../layouts/Layout.astro"

import notFoundImage from  '../../public/images/404.png'
---

<Layout title="Not Found">
  <Image
    src={notFoundImage}
    alt="404 Image"
    width={0}
    height={0}
    sizes="100vw"
    class="notfound-img"
  />
  <p class="notfound-text">Sorry, we could not find the page you were looking for.</p>

  <div class="link-container">
    <a class='back-home-btn' role="button" href='/'>Go Back Home</a>
  </div>

</Layout>

<style>

  .notfound-img {
    display: block;
    margin: 0 auto;
  }

  .notfound-text {
    font-size: var(--paragraph-font);
    text-align: center;
    margin-bottom: 3rem;
  }

  .link-container {
    text-align: center;
    margin-bottom: 6rem;
  }

  .back-home-btn {
    text-decoration: none;
    text-align: center;
    color: #fff;
    cursor: pointer;
    background-color: var(--primary-color);
    padding: 0.8rem 1.3rem;
    border-radius: var(--border-radius);
    font-size: var(--paragraph-font);
    transition: var(--transition) ease-in;
  }

  .back-home-btn:hover {
    background-color: var(--primary-hover);
  }
</style>